<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<h1>Books</h1>

  <table  width="80%" style="font-size: 12px; line-height: 200%; ">
      <tr>
        <th width="19%">Title</th>
        <th width="60%">Body</th>
        <th width="7%"></th>
        <th width="7%"></th>
        <th width="7%"></th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show",book_path(book.id) %></td>
        <td><%= link_to "edit",edit_book_path(book.id) %></td>
        <td> <%= link_to "destroy",book_path(book), method: :delete, data: {confirm: "Are you sure"} %></td>
      </tr>
      <% end %>
   </table>



<h1>New book</h1>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	<h4>Titile</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<br>
  <br><%= f.submit 'Create Book' %>




<% end %>
