<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>


<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


	<h4>Titile</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<br>
	<br>
	<%= f.submit 'Update Book' %>


<% end %>

<br>
<br>

<%= link_to "show",book_path(@book.id) %>
<%= link_to "back",books_path %>